            <input type="text" class="todo" placeholder="link" name="link">
            <button type="submit">upload</button>
        </form>    
    </div>


    <div class="row">
    <div id="tagcloud" class="anonymous_pro">
        <ul>
            <% for(var i = 0; i < library.length; i++) { %>
            <li><a href="<%=library[i].link%>"><%=library[i].name%></a></li>
            <% } %>
        </ul>
    </div> 
    </div>

</div>
    
